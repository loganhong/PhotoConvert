<Window x:Class="BatchPhotoConvert.ItemDescriptionForWap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="商品详情转换" Height="600" Width="1200">
    <Grid>
        <ProgressBar HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="400" Height="20"/>
        <Button Content="www转换>>wap" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="100" Click="ButtonConvertToWap_Click"/>
        <Viewbox>
            <TextBox  x:Name="wwwDescription" HorizontalAlignment="Left" Margin="0,30,600,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="wwwItemDescriptionInfo" VerticalAlignment="Top" Height="520" Width="580"/>
        </Viewbox>
        <Viewbox>
            <TextBox  x:Name="wapDescription" HorizontalAlignment="Left" Margin="600,30,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"  Text="wapItemDescriptionInfo" VerticalAlignment="Top" Height="520" Width="580"/>
        </Viewbox>
        <!--<ProgressBar Margin="0,552,0,0" />-->
      </Grid>

</Window>
